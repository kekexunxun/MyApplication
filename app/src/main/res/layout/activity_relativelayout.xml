<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/relative_textview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="猜拳游戏"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/relative_linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_textview1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/relative_textview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="关羽"
                android:textSize="16sp"
                />

            <ImageView
                android:id="@+id/relative_imageview1"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@+id/relative_textview2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/guanyu"
                />

            <RadioGroup
                android:id="@+id/relative_radiogroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_imageview1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="石头"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剪刀"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="布"/>
            </RadioGroup>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/relative_textview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="诸葛亮"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/relative_imageview2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_below="@+id/relative_textview3"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/zhugeliang"
                />

            <RadioGroup
                android:id="@+id/relative_radiogroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_imageview2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="石头"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剪刀"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="布"/>
            </RadioGroup>

        </RelativeLayout>

    </LinearLayout>


    <Button
        android:id="@+id/relative_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_linear1"
        android:layout_marginTop="10dp"
        android:text="确认"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/relative_textview4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative_btn"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:hint="点击确定查看结果"
        android:textSize="16sp"/>

</RelativeLayout>