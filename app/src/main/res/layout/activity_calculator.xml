<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gridlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="6">

    <TextView
        android:id="@+id/cal_textview"
        android:layout_columnSpan="4"
        android:layout_columnWeight="1"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:hint="@string/zero"
        android:textSize="50sp"/>

    <Button
        android:id="@+id/cal_ac"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="AC"/>

    <Button
        android:id="@+id/cal_sign"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="+/-"/>

    <Button
        android:id="@+id/cal_remain"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="%"/>

    <Button
        android:id="@+id/cal_div"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="รท"/>

    <Button
        android:id="@+id/cal_seven"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="7"/>

    <Button
        android:id="@+id/cal_eight"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="8"/>

    <Button
        android:id="@+id/cal_nine"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="9"/>

    <Button
        android:id="@+id/cal_multiply"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="ร"/>

    <Button
        android:id="@+id/cal_four"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="4"/>

    <Button
        android:id="@+id/cal_five"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="5"/>

    <Button
        android:id="@+id/cal_six"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="6"/>

    <Button
        android:id="@+id/cal_sub"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="-"/>

    <Button
        android:id="@+id/cal_one"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="1"/>

    <Button
        android:id="@+id/cal_two"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="2"/>

    <Button
        android:id="@+id/cal_three"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="3"/>

    <Button
        android:id="@+id/cal_plus"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="+"/>

    <Button
        android:id="@+id/cal_zero"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_gravity="fill"
        android:layout_rowSpan="1"
        android:text="@string/zero"/>

    <Button
        android:id="@+id/cal_dot"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="."/>

    <Button
        android:id="@+id/cal_equal"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:text="="/>


</GridLayout>